{
  "name": "@fe-proj/web-main",
  "version": "1.0.0",
  "type": "module",
  "description": "web前台",
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.ts$": "ts-jest",
      "^.+\\.vue$": "@vue/vue3-jest"
    },
    "moduleFileExtensions": [
      "js",
      "ts",
      "json",
      "vue"
    ],
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,vue,css,html,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint src/**/*.{js,ts,vue}",
    "lint:fix": "eslint src/**/*.{js,ts,vue} --fix",
    "format": "prettier --write src/**/*.{js,ts,vue,css,html,json}",
    "preview": "serve dist",
    "prepare": "husky",
    "test": "jest"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
