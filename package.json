{
  "name": "frontend-higher-principle-root",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/**/*",
    "libs/*"
  ],
  "packageManager": "pnpm@10.20.0",
  "engines": {
    "node": ">=v22.12.0",
    "npm": ">=11.3.0",
    "pnpm": ">=10.20.0"
  },
  "commitizen": {
    "path": "cz-conventional-changelog"
  },
  "scripts": {
    "lint:prettier": "prettier --write \"**/*.{js,ts,mjs,cjs,json,tsx,css,less,scss,vue,html,md}\"",
    "lint:eslint": "eslint",
    "lint:spellcheck": "cspell lint \"(packages|apps)/**/*.{js,ts,mjs,cjs,json,tsx,css,less,scss,vue,html,md}\"",
    "commit": "git-cz",
    "dev:web-main": "pnpm --filter @fe-proj/web-main dev",
    "build:web-main": "pnpm --filter @fe-proj/web-main build",
    "lint:web-main": "pnpm --filter @fe-proj/web-main lint",
    "test:web-main": "pnpm --filter @fe-proj/web-main test"
  },
  "dependencies": {
    "@vue/runtime-dom": "^3.5.22",
    "vue": "^3.5.22"
  },
  "devDependencies": {
    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@cspell/dict-lorem-ipsum": "^4.0.5",
    "@eslint/css": "^0.14.0",
    "@eslint/js": "^9.38.0",
    "@eslint/json": "^0.13.2",
    "@eslint/markdown": "^7.5.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^24.9.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "@vitejs/plugin-vue": "^6.0.1",
    "@vitejs/plugin-vue-jsx": "^5.1.1",
    "@vue/language-server": "^3.1.2",
    "@vue/vue3-jest": "29.2.6",
    "babel-jest": "^29.7.0",
    "commitizen": "^4.3.1",
    "cspell": "^9.2.2",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-vue": "^10.5.1",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.6",
    "prettier": "^3.6.2",
    "serve": "14.2.5",
    "ts-jest": "^29.4.5",
    "typescript": "^5.9.3",
    "unplugin-auto-import": "^20.2.0",
    "vite": "^7.1.12",
    "vite-plugin-imagemin": "^0.6.1",
    "vue-tsc": "^3.1.2"
  }
}
